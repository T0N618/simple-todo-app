								"exec": [
									"",
									"pm.environment.set(\"refreshToken\", pm.cookies.get(\"jwt\"));",
									"pm.environment.set(\"accessToken\", pm.response.json().accessToken)",
									"",
									"const jwt = pm.cookies.get('jwt')",
									"if (!jwt) return;",
									"let [jwtHeader, jwtPayload, jwtSignature] = jwt.split('.')",
									"let jwtPayloadJson = JSON.parse(atob(jwtPayload))",
